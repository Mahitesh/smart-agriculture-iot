import pandas as pd
from sklearn.model_selection import train_test_split

file_path = r'C:\ml_data\irrigation_synthetic_1000.csv'
data = pd.read_csv(file_path)

X = data.drop('Irrigate', axis=1)
y = data['Irrigate']

X_encoded = pd.get_dummies(X, columns=['Soil_Type', 'Crop_Type'], drop_first=True)

X_train, X_test, y_train, y_test = train_test_split(
    X_encoded, y, test_size=0.2, random_state=42
)

print("Data prepared for training. Shapes:")
print("X_train:", X_train.shape)
print("X_test:", X_test.shape)
print("y_train:", y_train.shape)
print("y_test:", y_test.shape)

from sklearn.tree import DecisionTreeClassifier
from sklearn.metrics import accuracy_score, confusion_matrix

model = DecisionTreeClassifier(random_state=42)

model.fit(X_train, y_train)

y_pred = model.predict(X_test)

accuracy = accuracy_score(y_test, y_pred)
conf_matrix = confusion_matrix(y_test, y_pred)

print(f"Model trained!")
print(f"Accuracy on test set: {accuracy*100:.2f}%")
print("Confusion Matrix:")
print(conf_matrix)

new_file_path = r'C:\ml_data\Judge_synthetic_data_set.csv'
new_data = pd.read_csv(new_file_path)

new_data_encoded = pd.get_dummies(new_data, columns=['Soil_Type', 'Crop_Type'], drop_first=True)

new_data_encoded = new_data_encoded.reindex(columns=X_train.columns, fill_value=0)

predictions = model.predict(new_data_encoded)

new_data['Irrigate_Predicted'] = predictions

print(new_data.head())

new_data['Soil_Deficit'] = 100 - new_data['Soil_Moisture']
new_data['Heat_Index'] = new_data['Temperature'] * (1 - new_data['Humidity']/100)

new_data.to_csv(r'C:\ml_data\judge_dataset_predictions.csv', index=False)
print("Predictions saved to C:\\ml_data\\judge_dataset_predictions.csv")
