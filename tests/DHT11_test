#include <DHT.h>               

#define DHTPIN D3              
#define DHTTYPE DHT11          
DHT dht(DHTPIN, DHTTYPE);     

void setup() {
  Serial.begin(9600);  
  dht.begin();          
}

void loop() {
  float temp = dht.readTemperature();  
  float hum = dht.readHumidity();     

  Serial.print("Temp: "); Serial.println(temp);
  Serial.print("Humidity: "); Serial.println(hum);

  delay(2000); 
}
